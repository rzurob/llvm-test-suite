#!/bin/ksh

rm -f newStreamFile
rm -f newFile
echo 'Compiling files'
echo ${COMPILER} ${TR_SRC}/$1.f ${OPTIONS} 2>$1.out
${COMPILER} ${TR_SRC}/$1.f ${OPTIONS} 2>$1.out
RC=$?

xldiff $1.out ${TR_SRC}/$1.vf
RC=$?

if [ $RC = 0 ]
then
  echo 'Verification successful'
else
  echo 'Verification failed'; exit $RC
fi

rm -f *.out
rm -f *.mod
rm -f newStreamFile
rm -f newFile
exit 0
