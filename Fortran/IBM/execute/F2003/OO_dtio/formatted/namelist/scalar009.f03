module m

   type :: base
      character(3) ::  c
      integer(4)   ::  i
   end type

   interface write(formatted)
      subroutine writeformatted(dtv, unit, iotype, v_list, iostat, iomsg )
         import base
         class(base), intent(in) :: dtv
         integer,  intent(in) :: unit
         character(*), intent(in) :: iotype
         integer, intent(in)     :: v_list(:)
         integer,  intent(out) :: iostat
         character(*),  intent(inout) :: iomsg
      end subroutine
   end interface

   implicit type(base)  (A-M)
   implicit class(base) (N-Z)

   namelist /nml1/ b1, b2
   namelist /nml2/ z3, z4
   allocatable :: z3
   pointer     :: z4

end module

program scalar009
   use m
   implicit none

   integer :: stat
   character(200) :: msg = ''

   open (1, file = 'scalar009.1', form='formatted', access='stream' )

   b1 = base(c='abc',i=1)
   b2 = base(c='def',i=2)
   allocate(z3, source = base(c='ghi',i=3) )
   allocate(z4, source = base(c='jkl',i=4) )

   write (1,NML=nml1, iostat=stat, iomsg=msg)
   if (( stat /=  0 ) .or. ( msg /= 'dtiowrite' ) ) error stop 1_4

   write (1,NML=nml2, iostat=stat, iomsg=msg)
   if (( stat /=  0 ) .or. ( msg /= 'dtiowrite' ) ) error stop 2_4

end program


subroutine writeformatted (dtv, unit, iotype, v_list, iostat, iomsg)
   use m, only: base

   class(base), intent(in) :: dtv
   integer, intent(in) :: unit
   character(*), intent(in) :: iotype
   integer, intent(in)     :: v_list(:)
   integer, intent(out) :: iostat
   character(*), intent(inout) :: iomsg

   if ( iotype /= "NAMELIST" ) error stop 3_4
   if ( size(v_list, 1) /= 0 ) error stop 4_4

   write (unit, "('i= ',I4,1X, 'c= ', A3, 1X)", iostat=iostat )        dtv%i, dtv%c

   iomsg = 'dtiowrite'

end subroutine
